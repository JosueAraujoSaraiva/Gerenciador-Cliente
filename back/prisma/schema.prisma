generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Produto {
  id_produto Int @id @default(autoincrement())
  nome String
  descricao String
  preco Decimal
  quantidadeEstoque Int
}

model Cliente {
  id_cliente Int @default(autoincrement())
  nome String @db.VarChar(100)
  cpf Int 
  email String @unique
  telefone Int
  endereco String

  @@id([id_cliente, cpf])
}
model Venda {
  id_venda Int @id @default(autoincrement())
  data DateTime
  valorTotal Decimal
} 

